<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 根布局是一个 SplitPane -->
<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="回测结果总结">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </Label>
        <TextArea fx:id="summaryArea" editable="false" prefHeight="200.0" wrapText="true" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="交易日志">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </Label>
        <TableView fx:id="tradeLogTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="交易日期"/>
                <TableColumn fx:id="signalColumn" prefWidth="75.0" text="信号"/>
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="成交价格"/>
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="成交数量"/>
                <TableColumn fx:id="valueColumn" prefWidth="120.0" text="成交金额"/>
            </columns>
            <placeholder>
                <Label text="表中无内容"/>
            </placeholder>
        </TableView>
    </VBox>
</SplitPane>