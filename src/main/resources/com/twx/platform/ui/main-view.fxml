<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.twx.platform.ui.UIController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label text="量化回测配置">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="股票代码:"/>
                <TextField fx:id="tickerField" text="sh600519" GridPane.columnIndex="1"/>
                <Label text="初始资金:" GridPane.columnIndex="2"/>
                <TextField fx:id="initialCashField" text="100000.0" GridPane.columnIndex="3"/>
                <Label text="开始日期:" GridPane.rowIndex="1"/>
                <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="结束日期:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <DatePicker fx:id="endDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Button fx:id="runButton" onAction="#handleRunBacktest" text="运行回测" GridPane.columnIndex="4"
                        GridPane.rowIndex="1"/>
            </GridPane>
        </VBox>
    </top>
    <center>
        <LineChart fx:id="priceChart" animated="false" title="股价走势与交易点">
            <xAxis><CategoryAxis side="BOTTOM" label="日期" /></xAxis>
            <yAxis><NumberAxis side="LEFT" label="价格" /></yAxis>
        </LineChart>
    </center>
    <bottom>
        <!-- ★★★ 关键改动：使用 SplitPane 分割底部区域 ★★★ -->
        <SplitPane dividerPositions="0.4" orientation="VERTICAL" prefHeight="350.0" BorderPane.alignment="CENTER">
            <!-- 分割面板的上半部分：结果总结 -->
            <VBox spacing="5.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="回测结果总结">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextArea fx:id="summaryArea" editable="false" prefHeight="100.0" wrapText="true"/>
            </VBox>
            <!-- 分割面板的下半部分：新增的交易日志表格 -->
            <VBox spacing="5.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="交易日志">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TableView fx:id="tradeLogTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="120.0" text="交易日期"/>
                        <TableColumn fx:id="signalColumn" prefWidth="75.0" text="信号"/>
                        <TableColumn fx:id="priceColumn" prefWidth="100.0" text="成交价格"/>
                        <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="成交数量"/>
                        <TableColumn fx:id="valueColumn" prefWidth="120.0" text="成交金额"/>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </bottom>
</BorderPane>