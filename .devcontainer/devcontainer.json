{
  "name": "JavaFX Desktop",
  // 使用微软官方的 Java 21 镜像
  "image": "mcr.microsoft.com/devcontainers/java:21",

  // 关键：启用 "Desktop Lite" 功能 (这就是云端图形界面/VNC)
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest"
    }
  },

  // 端口转发：6080 是图形界面的网页端口
  "forwardPorts": [6080],

  // 第一次启动时自动下载 Maven 依赖，省得演示时等
  "postCreateCommand": "mvn clean install -DskipTests",

  // 设置环境变量
  "containerEnv": {
    "DISPLAY": ":1"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  }
}